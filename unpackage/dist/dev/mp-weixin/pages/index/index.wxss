.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.banner-img {
  width: 750rpx;
  height: 250rpx;
}
.center-img {
  width: 350rpx;
  height: 350rpx;
  background-color: aqua;
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  position: relative;
}
.image-top,
.image-bottom {
  position: absolute;
  width: 90%;
  left: 15rpx;
  justify-content: space-between;
}
.image-top .boder-bgc,
.image-bottom .boder-bgc {
  background-color: rgba(0, 0, 0, 0.4);
  align-items: center;
  color: white;
  height: 40rpx;
  padding: 4rpx 20rpx;
  text-align: center;
}
.image-top .boder-bgc text,
.image-bottom .boder-bgc text {
  display: inline-block;
  margin-left: 10rpx;
  line-height: 24rpx;
}

